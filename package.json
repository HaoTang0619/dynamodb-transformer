{
  "name": "dynamodb-transformer",
  "version": "1.0.2",
  "description": "Plenty of handy functions that help you deal with DynamoDB schema & expressions easily.",
  "main": "lib/main/index.js",
  "types": "lib/main/index.d.ts",
  "module": "lib/module/index.js",
  "private": false,
  "exports": {
    ".": {
      "import": "./lib/module/index.js",
      "require": "./lib/main/index.js"
    },
    "./expressions": {
      "import": "./lib/module/expressions/index.js",
      "require": "./lib/main/expressions/index.js"
    },
    "./logical": {
      "import": "./lib/module/expressions/logical/index.js",
      "require": "./lib/main/expressions/logical/index.js"
    },
    "./operate": {
      "import": "./lib/module/expressions/operate/index.js",
      "require": "./lib/main/expressions/operate/index.js"
    },
    "./update": {
      "import": "./lib/module/expressions/update/index.js",
      "require": "./lib/main/expressions/update/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HaoTang0619/dynamodb-transformer.git"
  },
  "author": "Howard Tang <t919901@gmail.com>",
  "keywords": [
    "dynamodb",
    "aws",
    "expression",
    "attribute",
    "attributevalue"
  ],
  "license": "MIT",
  "homepage": "https://github.com/HaoTang0619/dynamodb-transformer",
  "engines": {
    "node": ">=10"
  },
  "files": [
    "lib/main",
    "lib/module"
  ],
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "run-p build:*",
    "build:main": "tsc --build tsconfig.build.json",
    "build:module": "tsc --build tsconfig.module.json",
    "format": "prettier --write \"src/**/*.{ts*,js*}\"",
    "lint": "yarn format && eslint \"src/**/*.{ts*,js*}\" --fix",
    "test": "jest --passWithNoTests",
    "publish:local": "yalc publish --push --replace",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn lint",
    "version": "yarn lint && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-no-console-log": "^2.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
