{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "./lib/main",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src", "usage"],
}